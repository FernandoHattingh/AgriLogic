<!DOCTYPE html>
<link rel="stylesheet" href="~/AgriLogic.styles.css" asp-append-version="true" />
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriLogic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriLogic.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        bool hideNavbar = ViewData["HideNavbar"] as bool? ?? false;
    }

    @if (!hideNavbar)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://cdn.discordapp.com/attachments/190829242076889088/1112126767596052560/AgriLogic_Logo_Simple.png" alt="AgriLogic" width="55" height="55" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav ms-auto me-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <form id="logoutForm" method="post" asp-action="Index" asp-controller="Home">
                                        <button type="submit" class="nav-link btn btn-link btn-rounded btn-sign-out text-danger">Sign Out</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-link btn-rounded btn-sign-in" asp-area="" asp-controller="Home" asp-action="Index">Sign In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    }

    <div class="justify-content-around">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
